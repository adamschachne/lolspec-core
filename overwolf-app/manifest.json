{
	"manifest_version":"1",
	"type":"WebApp",
	"meta":{
		"name":"lolspec",
		"version":"1.1.0.2",
		"minimum-overwolf-version": "0.85.0.0",
		"author":"lolspec team",
		"icon":"lolspec-icon.png",
		"icon_gray":"lolspec-icon-grey.png",
		"description":"listen to recorded voice in League of Legends"
	},
	"permissions": ["Extensions", "GameInfo"],
	"data": {
		"start_window":"index",
		"windows":{
			"index":{
				"file":"index.html",
				"transparent": true,
		        "resizable": true,
		        "show_in_taskbar": true,
		        "grab_keyboard_focus": false,
				"in_game_only": false,

			},
			"audio": {
				"file": "audio.html",
				"transparent":true,
				"resizable":false,
				"show_in_taskbar": false,
				"in_game_only": true,
				"size": {
					"width": 400,
					"height": 400
				},
				"start_position": {
					"Top": 500,
					"Left": 300
				}
			}
		},
		"protocol_override_domains" : {"xd.ddnsking.com": "http"},
		"externally_connectable": {
			"matches": [
				"http://*.xd.ddnsking.com",
			]
		},
		"game_events": [5426],
		"launch_events": [
			{
				"event": "GameLaunch",
				"event_data": {
					"game_ids": [5426]
				},
				"start_minimized": true
			}
		],
		"extra-objects": {
			"audiosync": {
				"file": "plugins/audiosync.dll",
				"class": "audiosync.Audiosync"
			}
		}
	}
}
